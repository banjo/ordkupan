generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-1.1.x", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  uniqueIdentifier String   @default(uuid())
  publicIdentifier String   @default(uuid())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  scores           Score[]
  guesses          Guess[]
}

model Score {
  id        Int      @id @default(autoincrement())
  userId    Int
  score     Int?
  words     String[]
  maxScore  Int?
  date      DateTime @default(now()) @db.Date
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
}

model Guess {
  id        Int      @id @default(autoincrement())
  userId    Int
  guesses   Int
  words     String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  date      DateTime @default(now()) @db.Date
  user      User     @relation(fields: [userId], references: [id])
}

model Combo {
  id           Int    @id @default(autoincrement())
  mainLetter   String
  otherLetters Json   @db.Json
  allWords     Json?  @db.Json
  maxScore     Int
}
