{
    "name": "ordkupan",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev -p 3001",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "format": "prettier --write .",
        "test": "vitest",
        "create:words": "esno words/createWords.ts",
        "create:combos": "esno words/createCombos.ts",
        "db:local:start": "docker compose up -d",
        "db:local:stop": "docker compose stop",
        "db:local:generate": "pnpm exec prisma generate",
        "db:local:restart": "docker compose down --volumes && docker compose up -d",
        "db:local:reset": "zx scripts/dev-db.mjs pnpm exec prisma migrate reset --skip-seed --skip-generate --force",
        "db:local:seed": "zx scripts/dev-db.mjs esno prisma/seed.ts",
        "db:local:prepare": "zx scripts/dev-db.mjs pnpm exec prisma db push",
        "db:local:migrate": "zx scripts/dev-db.mjs pnpm exec prisma migrate deploy",
        "db:local:migrate:create": "zx scripts/dev-db.mjs pnpm exec prisma migrate dev",
        "db:local:mock": "zx scripts/mock-prod-db.mjs",
        "db:prod:migrate": "pnpm exec prisma migrate deploy",
        "postinstall": "prisma generate"
    },
    "prisma": {
        "seed": "esno prisma/seed.ts"
    },
    "dependencies": {
        "@banjoanton/eslint-config": "^0.2.20",
        "@banjoanton/prettier-config": "^0.1.11",
        "@js-temporal/polyfill": "^0.4.4",
        "@prisma/client": "^4.16.2",
        "@types/node": "20.1.5",
        "@types/react": "18.2.6",
        "@types/react-dom": "18.2.4",
        "autoprefixer": "10.4.14",
        "date-fns": "^2.30.0",
        "dotenv": "^16.0.3",
        "eslint": "9.39.2",
        "eslint-config-next": "16.1.0",
        "framer-motion": "^10.12.16",
        "ky": "^0.33.3",
        "next": "13.4.2",
        "postcss": "8.4.23",
        "prisma": "^4.16.2",
        "react": "18.2.0",
        "react-confetti-explosion": "^2.1.2",
        "react-dom": "18.2.0",
        "react-hot-toast": "^2.4.1",
        "react-icons": "^4.8.0",
        "react-use": "^17.4.0",
        "tailwindcss": "3.3.2",
        "typescript": "5.0.4",
        "zustand": "^4.3.8"
    },
    "prettier": "@banjoanton/prettier-config",
    "devDependencies": {
        "@antfu/ni": "^0.21.4",
        "@banjoanton/utils": "^0.1.43",
        "@testing-library/react-hooks": "^8.0.1",
        "@types/jsdom": "^21.1.1",
        "@vitejs/plugin-react": "^4.0.0",
        "esno": "^0.16.3",
        "hoks": "^0.1.16",
        "jsdom": "^22.1.0",
        "prettier": "^2.8.8",
        "prettier-plugin-tailwindcss": "^0.3.0",
        "vite-tsconfig-paths": "^4.2.0",
        "vitest": "^0.31.1",
        "zx": "^7.2.3"
    }
}
